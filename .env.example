# Environment Variables for LES (Legal Evidence System)
# Copy this file to .env and fill in your actual values

# Application Environment
VITE_APP_ENV=development

# API Configuration
VITE_API_BASE_URL=https://your-netlify-site.netlify.app/.netlify/functions

# Database Configuration (Neon PostgreSQL)
DATABASE_URL=postgresql://username:password@ep-endpoint.region.neon.tech/dbname
NEON_DATABASE_URL=postgresql://username:password@ep-endpoint.region.neon.tech/dbname

# Authentication (when implemented)
JWT_SECRET=your-jwt-secret-key

# Database (when implemented)
VITE_DATABASE_URL=your-database-connection-string

# External Services (when implemented)
VITE_FILE_STORAGE_URL=your-file-storage-service

# Analytics (optional)
VITE_ANALYTICS_ID=your-analytics-id

# Development flags
VITE_ENABLE_MOCK_DATA=true
VITE_DEBUG_MODE=true
